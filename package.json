{
  "name": "react-clean-architecture-sample",
  "private": true,
  "type": "module",
  "description": "react clean architecture sample",
  "workspaces": [
    "photo-album"
  ],
  "scripts": {
    "sort": "npm run sort -ws",
    "check:spell": "cspell '**/*.{ts,tsx,yml}' --cache --gitignore",
    "check": "npm run check -ws && npm run check:spell",
    "fix": "npm run fix -ws && npm run check:spell",
    "update:pkgs": "volta pin npm@10 node@20 && ncu -u && npm run update:pkgs -ws",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/package.json": [
      "bash -c 'npm run sort'"
    ],
    "photo-album/**/*": [
      "bash -c 'npm run check -w photo-album'",
      "bash -c 'npm run fix -w photo-album'",
      "bash -c 'npm run check:spell'"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "cspell": "8.10.4",
    "husky": "9.0.11",
    "jsdom": "24.1.0",
    "lint-staged": "15.2.7",
    "npm-run-all": "4.1.5",
    "sort-package-json": "2.10.0",
    "tsx": "4.16.2"
  },
  "engines": {
    "node": "20.15.1",
    "npm": ">= 10.x"
  },
  "volta": {
    "node": "20.15.1",
    "npm": "10.8.2"
  }
}
